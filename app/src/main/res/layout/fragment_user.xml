<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewEdad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewAltura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altura: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewPesoActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso Actual: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewPesoObjetivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso Objetivo: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewNivelActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivel de Actividad: "
            android:textSize="18sp" />

        <!-- Agrega más TextViews para los demás datos -->

    </LinearLayout>

</ScrollView>
